
@{
    ViewBag.Title = "Donate";
}

<h1>Donate"@ViewBag.camp.campName" by filup this form</h1>
<form method="post">
    <input type="number" name="Amount" class="form-control" placeholder="Enter Amount" />
    <span class="text-danger">@Html.ValidationMessage("Amount")</span>
    <input type="hidden" name="Date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
    <input type="hidden" name="CampainID" value="@ViewBag.camp.CampainID" />
    <br />
    <input type="submit" class="btn btn-outline-success" value="Donate" />
    <a href="/User/DonationPage" class="btn btn-outline-info">Back</a>

</form>


