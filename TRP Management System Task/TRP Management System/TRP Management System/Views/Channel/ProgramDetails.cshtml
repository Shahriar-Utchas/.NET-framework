
@{
    ViewBag.Title = "ProgramDetails";
}

<h2>ProgramDetails</h2>

<br />
    @if (Model.Count == 0) {
    
    
    <p class="alert alert-danger">No Program Found</p>
    }
    else{

        <table class="table table-bordered">
            <tr>
                <th>Program ID</th>
                <th>Program Name</th>
                <th>TRP Score</th>
                <th>Air Time</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProgramId</td>
                    <td>@item.ProgramName</td>
                    <td>@item.TRPScore</td>
                    <td>@item.AirTime</td>
                </tr>
            }
        </table>
        }
        
        <br />
             <a href="/Channel/ChannelList/" class="btn btn-info">Back</a>
             <a href="/Program/ProgramCreate/" class="btn btn-outline-primary">ADD Programs</a>

