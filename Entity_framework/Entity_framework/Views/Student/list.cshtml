
@{
    ViewBag.Title = "list";
}

<h2>Student list</h2>
@if (TempData["Msg"] != null)
{
    <span class="alert alert-info">@TempData["Msg"]</span>
}
@if (Model.Count == 0)
{
    <h3>No Data</h3>
}
else
{
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
            </tr>
        }
    </table>
}

